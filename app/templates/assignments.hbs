<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <div class="row-space-2">
        {{#link-to 'assignments' class="link-reset" }}
          <h1>Assignments</h1>
        {{/link-to}}
      </div>
      <ul class="list-group">
        {{#each assignment in model}}
          {{#link-to 'assignments.assignment' assignment classNames="list-group-item" }}
            <h4> {{assignment.title}} </h4>
            {{date-formatted assignment.due_at}}
          {{/link-to}}
        {{/each}}
      </ul>

      <button {{action 'openModal' 'create-assignment-modal' model}} class="btn btn-primary btn-sm pull-right modal-btn">Create Assignment</button>

    </div>

    <div class="col-sm-8">
      {{outlet}}
    </div>

  </div>
</div>
