<div class="container">
  <div class="row row-space-top-4">

    <div class="col-sm-4">
      <div class="row-space-2">
        {{#link-to 'assignments' class="link-reset"}}
          <h1>Assignments</h1>
        {{/link-to}}
      </div>
    </div>

    <div class="col-sm-8">
      {{#unless isIndex}}
        <div class="navigation-tabs">
          <div role="presentation" {{bind-attr class="isShowingAssignment:active :tab"}} {{action 'toggleNav'}}>
            {{#link-to 'assignments.assignment' model class="link-reset"}} Assignment {{/link-to}}
          </div>
          <div role="presentation" {{bind-attr class="isShowingAssignment::active :tab"}} {{action 'toggleNav'}}>
            {{#link-to 'assignments.assignment.submissions' model class="link-reset"}} Submissions {{/link-to}}
          </div>
        </div>
      {{/unless}}

      <button {{action 'openModal' 'modal' model}} class="btn btn-primary pull-right modal-btn">Add an Assignment</button>
    </div>

  </div>
</div>
{{outlet 'modal'}}
{{outlet}}
